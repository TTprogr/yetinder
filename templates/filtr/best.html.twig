{% extends 'base.html.twig' %}

{% block title %}Best Match{% endblock %}

{% block body %}
    <h2>Best Match</h2>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    {% if app.user %}
        <div class="mb-3">
            Jste přihlášen jako {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="mb-3 form-check form-label form-text col-form-label col-sm-2 form-control-lg">
        <h2><a href="{{ path('hodnoceni', {id: yeti.id}) }}">{{ yeti.jmeno}}</a></h2>
        <p>Výška: {{ yeti.vyska }} cm</p>
        <p>Váha: {{ yeti.vaha }} kg</p>
        <p>Kožich: {{ yeti.kozich }}</p>
        <a href="{{path("filter")}}" class="btn btn-primary">Další Yeti</a>
    </div>

    {% else %}
        <p>Přístup odepřen. Přihlašte se prosím. <a href="{{ path('app_login') }}">Přihlášeni</a></p>
    {% endif %}
{% endblock %}