{% extends 'base.html.twig' %}

{% block title %}Domovská stránka{% endblock %}

{% block body %}
	<h2 class="">Yeti</h2>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">ID</th>
				<th scope="col">Jméno</th>
				<th scope="col">Váha</th>
				<th scope="col">Kožich</th>
				<th scope="col">Adresa</th>
			</tr>
		</thead>
		<tbody class="">
			{% for yeti in yetis %}
				<tr>
					<td>{{ yeti.id }}</td>
					<td>
						<a href="{{ path('hodnoceni', {id: yeti.id}) }}">{{ yeti.jmeno}}</a>
					</td>
					<td>
						{{ yeti.vaha}}</td>
					<td>
						{{ yeti.kozich}}</td>
					<td>
						{{ yeti.adresa}}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
