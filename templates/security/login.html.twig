{% extends 'base.html.twig' %}

{% block title %}Přihlášeni{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Jste přihlášen jako {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    
    <h1 class="h3 mb-3 font-weight-normal">Prosím přihlašte se</h1>
    <div class="mb-3 form-check form-label form-text col-form-label col-sm-2 form-control-lg">
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="" autocomplete="current-password" required>
  
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <div class="checkbox mb-3 ">
        <label>
            <input type="checkbox" name="_remember_me"> Zapamatovat
        </label>
    </div>

    <button class="btn btn-lg btn-primary" type="submit">
        Přihlásit
    </button>
      </div>
</form>
{% endblock %}
